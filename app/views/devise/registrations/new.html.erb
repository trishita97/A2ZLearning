<div style="background-image: url(/12.jpg);">
  <div class="container" style="padding-top: 100px; padding-bottom: 100px;">
    <h1>Sign up </h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="row">
      <div class="col">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
      </div>

      <div class="col">
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Password' %>
      </div>

      <div class="col">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Confirm Password' %>
      </div>
    </div>
    <br />
    <%= f.fields_for :profile,resource.build_profile do |p| %>
    <div class="row">
      <div class="col">
        <%= p.text_field :first_name, class: 'form-control', placeholder: 'First Name'%>
      </div>
      <div class="col">
        <%= p.text_field :middle_name, class: 'form-control', placeholder: 'Middle Name'%>
      </div>
      <div class="col">
        <%= p.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>
      </div>
    </div>
    <br />
    <div class="row">
      <div class="col">
        <%= p.text_field :address, class: 'form-control', placeholder: 'Address' %>
      </div>
      <div class="col">
        <%= p.text_field :mobile, class: 'form-control', placeholder: 'Mobile' %>
      </div>
    </div>

    <% end %>
    <br />
    <div class="actions" style="float: right;">
      <%= f.submit "Sign up", class: 'btn btn-primary' %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>